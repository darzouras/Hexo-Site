.home-header-container
    text-align: center

.home-header-icon
    width: 100px
    height: 100px
    border-radius: 100%
    border: 2px solid color-darkest
    opacity: .9

@media (min-width:768px)
    .home-header-container
        display: flex
        flex-wrap: nowrap
        aling-items: center
        text-align: left

    .home-header-title
        margin-left: 15px
        display: flex
        align-items: center
    
    .home-header-icon
        justify-self: flex-start

