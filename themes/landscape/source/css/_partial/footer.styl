#footer
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  background: color-darkest
  padding: 15px 0
  color: color-lightest
  text-align: center;
  a
    color: color-light
    text-decoration: none

#footer-info
  line-height: 1
  font-size: 0.8em

.footer-social
  font-family: font-icon
  font-size: 1.7em
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-weight: 200

.footer-icon
  margin: 0 3px

#footer-linkedin-link
  &:before
    content: "\f08c"

#footer-twitter-link
  &:before
    content: "\f081"

#footer-insta-link
  &:before
    content: "\f16d"

#footer-github-link
  &:before
    content: "\f09b"

.footer-email
  font: 1.5em font-serif
  margin: 5px 0